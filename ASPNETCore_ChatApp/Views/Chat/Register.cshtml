
@{
    ViewData["Title"] = "Register";
}

<div class="container w-50" style="margin-top: 100px">
    <div class="d-flex">
        <img class="mx-auto" src="~/img/user (1).png" width="150" height="150" />
    </div>
    <p class="text-center">Create a new account</p>
    <form class="mt-5" asp-controller="Chat" asp-action="Hub" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="uname" required />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" aria-describedby="emailHelp" required />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="pwrd" required />
        </div>
        <div class="form-group">
            <label>Upload image</label>
            <input type="file" class="form-control-file" name="img-file" required />
        </div>
        <input type="hidden" name="form-type" value="register" />
        <div class="py-3 d-flex justify-content-between">
            <a href="@Url.Action("Login", "Chat")">Back to login</a>
            <button type="submit" class="btn">Register</button>
        </div>
    </form>
</div>