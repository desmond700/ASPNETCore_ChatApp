@{
    ViewData["Title"] = "ASPNETChat - Login";
}

<div class="container w-50" style="margin-top: 100px">
    <div class="d-flex">
        <img class="mx-auto" src="~/img/user (1).png" width="150" height="150" />
    </div>
    <p class="text-center">Enter your information to login to your account</p>
    <form class="mt-5" asp-controller="Chat" asp-action="Hub" method="post">
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="uname" required />
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="pwrd" required />
        </div>
        <input type="hidden" name="form-type" value="login" />
        <div class="py-3 d-flex justify-content-between">
            <a href="@Url.Action("Register", "Chat")">Need an account?</a>
            <button type="submit" class="btn">Login</button>
        </div>
    </form>
</div>
<script src="~/lib/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>