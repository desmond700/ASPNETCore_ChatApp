@model ASPNETCore_ChatApp.Models.User

@{
    ViewData["Title"] = "ChatHub";

}

<div class="container">
    <div class="d-flex justify-content-between col-12 pt-3 pb-2">
        <h1>ChatHub</h1>
        <a href="@Url.Action("Logout","Chat")" class="btn btn-dark my-auto text-white">Logout</a>
    </div>
    <div class="row">
        <!--USER PANEL-->
        <div class="col-xs-12 col-sm-4 col-md-3 list-panel">
            <div class="text-white">
                <div class="d-flex flex-row my-4">
                    <div class="d-flex">
                        <img id="userImg" data-senderid="@Model.Id" class="my-auto img-round" src="~/img/@Model.Image" alt="user" width="34" height="34" />
                    </div>
                    <div class="d-flex flex-wrap align-content-center h-100">
                        <h5 id="username" class="text-white mb-0 col-12">@Model.Username</h5>
                        <p class="statusTxt text-secondary mb-0 col-12">@Model.Status</p>
                    </div>
                </div>
                <div>
                    <div class="d-flex justify-content-between">
                        <p class="text-white mb-0 text-nowrap" >Chats</p>
                        <span>(<span id="usersCount"></span>)</span>
                    </div>
                    <hr class="bg-white mt-0" />
                </div>
            </div>
            <ul class="nav"></ul>
            <a href="@Url.Action("Login","Admin")" class="admin-link">Admin</a>
        </div>
        <!--MESSAGE PANEL-->
        <div class="col-xs-12 col-sm-8 col-md-9 message-panel">
            
            
            <div class="chat-sect h-100">
                <div class="d-flex pb-1">
                    <img id="backBtn" class="my-auto mr-2 border" src="~/img/baseline_arrow_back_white_18dp.png" />
                    <h3 class="text-white py-3 m-0">Your conversation with <span id="convo_partner_name" class="text-dark">convo_partner_name</span></h3>
                </div>   
                <span id="isTyping" class="text-center pb-1"></span>
                <div class="message-box">
                    <div class="message-status">message sent</div>
                </div>
                <input type="hidden" id="userInput" value="@Model.Username" />
                <div class="message-input d-flex">
                    <input type="text" id="messageInput" class="form-control" placeholder="Write a message" />
                    <button id="sendButton" class="btn">Send</button>
                </div>
            </div>
            <div class="no-chat h-100">
                <h3 class="text-center align-self-center flex-grow-1">Select an online user to begin chat</h3>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <!--<script src="~/lib/jquery/dist/jquery.signalr-2.2.js"></script>-->
    <script src="~/js/chat.js"></script>
