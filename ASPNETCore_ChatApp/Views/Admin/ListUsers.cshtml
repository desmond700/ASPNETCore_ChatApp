
@{
    ViewData["Title"] = "Panel";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script>
    window.onload = function () {

        document.getElementsByClassName("list-item")[0].addEventListener("click", function (event) {
            console.log("clicked");
            document.getElementsByClassName("list-users")[0].style.transform = "translate(-100%)";
            document.getElementsByClassName("user-details")[0].style.transform = "translate(-100%)";
        }, false);

        document.getElementsByClassName("list-item-back")[0].addEventListener("click", function () {
            document.getElementsByClassName("list-users")[0].style.transform = "translate(0)";
            document.getElementsByClassName("user-details")[0].style.transform = "translate(0)";
        });

        document.getElementsByClassName("checkbox-all")[0].addEventListener("change", function () {
            let checkboxes = document.getElementsByClassName("check-user");
            if (this.checked) {
                // Checkbox is checked..
                console.log("Checkbox is checked");
                console.log(checkboxes);
                for (let i = 0; i < checkboxes.length; i++) {
                    checkboxes[i].checked=true;
                }

            } else {
                // Checkbox is not checked..
                console.log("Checkbox is not checked");
                for (let i = 0; i < checkboxes.length; i++) {
                    checkboxes[i].checked = false;
                }
            }
        })

        document.getElementsByClassName("check-user")[0].addEventListener("click", function (event) {
            event.stopPropagation();
            if (event.currentTarget.checked) {
                // Checkbox is checked..
                console.log("Checkbox is checked");
            } else {
                // Checkbox is not checked..
                console.log("Checkbox is not checked");
            }
        }, false)
    }
</script>

<style>
    body{
        background-color: #fff;
    }

    .container-fluid {
        padding: 35px 0 0 0;
    }

    .menu {
        display: flex;
        flex-direction: column;
        background-color: #D5D5D5;
        height: calc(100vh - 147px);
    }

    .menu h6{
        font-weight: bold;
        color: #000;
    }

    .list-users {
        display: flex;
        flex-direction: column;
        background-color: #fff;
        height: calc(100vh - 147px);
    }

    .nav{
        height: auto;
    }

    .nav li{
        padding: 2px 5px;
    }
    .nav li:hover {
        background-color: #f8f9fa;
        border-radius: 5px;
        cursor: pointer;
    }

    .action-dropdown p{
        margin: auto 0;
    }

    #search input {
        display: block;
        padding: 0.375rem, 0.75rem;
        border-top-left-radius: 0.25rem;
        border-bottom-left-radius: 0.25rem;
        background-clip: padding-box;
        border: 1px solid #ced4da;
        height: calc(2.25rem + 2px);
        font-size: 1rem;
        color: #495057;
    }

    #search button {
        display: inline-block;
        padding: 0;
        border-top-right-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
        border: 1px solid transparent;
        font-size: 0.5rem;
        line-height: 1.5;
        cursor: pointer;
    }

    .checkbox-all {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }

    .check-user{

    }

    .list-item {
        display: flex;
        justify-content: space-between;
        padding: 5px 10px;
        margin: 6px 0;
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

    .list-item:hover {
        background-color: #ced4da;
        border-radius: 0.25rem;
        cursor: pointer;
    }

    .list-item-back {
        padding: 8px 0;
        border-bottom: 1px solid #ced4da;
    }

    .list-item-back:hover {
        background-color: #ced4da;
        cursor: pointer;
    }

    .user-view {
        display: flex;
        flex-wrap: nowrap;
        flex-shrink: 0;
        overflow-x: hidden;
    }

    .list-users{
        flex-shrink: 0;
        transition: transform 0.5s ease-in-out;
    }

    .user-details {
        flex-shrink: 0;
        transition: transform 0.5s ease-in-out;
    }
</style>

<!--VIEW PANEL-->
<div class="user-view">
